{
  "name": "@exchange/redis",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./publisher": {
      "types": "./src/publisher.ts",
      "import": "./src/publisher.ts"
    },
    "./subscriber": {
      "types": "./src/subscriber.ts",
      "import": "./src/subscriber.ts"
    }
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node",
    "dev": "bun run build --watch",
    "clean": "rm -rf dist node_modules/.cache"
  },
  "devDependencies": {
    "@exchange/typescript-config": "workspace:*",
    "@types/bun": "latest",
    "typescript": "^5"
  },
  "dependencies": {
    "@exchange/config": "workspace:*",
    "ioredis": "^5.7.0"
  }
}
